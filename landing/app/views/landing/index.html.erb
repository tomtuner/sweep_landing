
<%= form_for @message, url: { action: "create" } do |f| %>
	<% @message.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :content, "Message" %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Send Message" %></p>
<% end %>